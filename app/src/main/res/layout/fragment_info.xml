<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="misiont.mision3.Fragments.InfoFragment"
    >
    <TableRow
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </TableRow>
    <!-- TODO: Update blank fragment layout -->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageViewFirstInstrument"
            android:layout_height="@dimen/instrument_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:id="@+id/imageViewSecondInstrument"
            android:layout_height="@dimen/instrument_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/buttonFavFirstInstrument"
            android:layout_height="@dimen/instrument_button_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_star"
            android:scaleType="centerInside"
            />
        <ImageButton
            android:id="@+id/buttonPlayFirstInstrument"
            android:layout_height="@dimen/instrument_button_height"
            android:layout_width="0dp"
            android:src="@mipmap/ic_play"
            android:scaleType="centerInside"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/buttonFavSecondInstrument"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/instrument_button_height"
            android:src="@mipmap/ic_star"
            android:scaleType="centerInside"
            />
        <ImageButton
            android:id="@+id/buttonPlaySecondInstrument"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_play"
            android:scaleType="centerInside"
            android:layout_height="@dimen/instrument_button_height"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:layout_row="4"
            android:gravity="center"
            android:text="@string/labelSchool"
            android:textColor="@color/black"
            android:layout_width="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:layout_row="4"
            android:gravity="center"
            android:text="@string/labelWebLink"
            android:layout_width="wrap_content" />
    </TableRow>

</TableLayout>
